    // Footer section
    footer
      .container
        .row
          .col-md-12.col-sm-12
            ul.social-icon
              li
                a.fa.fa-facebook.wow.fadeInUp(href='#', data-wow-delay='0.2s')
              li
                a.fa.fa-twitter.wow.fadeInUp(href='#', data-wow-delay='0.4s')
              li
                a.fa.fa-instagram.wow.fadeInUp(href='#', data-wow-delay='0.8s')
              li
                a.fa.fa-envelope-o.wow.fadeInUp(href='#', data-wow-delay='0.6s')
