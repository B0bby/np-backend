  body#top(data-spy='scroll', data-offset='50', data-target='.navbar-collapse')
    // Preloader section
    .preloader
      .sk-spinner.sk-spinner-pulse
    // Navigation section
    .navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(data-toggle='collapse', data-target='.navbar-collapse')
            span.icon.icon-bar
            span.icon.icon-bar
            span.icon.icon-bar
          a.navbar-brand.smoothScroll(href='#top') Local Lineup
        .collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a.smoothScroll(href='#top')
                span Home
            li
              a.smoothScroll(href='#playlist')
                span Playlist
            li
              a.smoothScroll(href='#shows')
                span Shows
            li
              a.smoothScroll(href='#subscribe')
                span Subscribe
    // Home section
    section#home
      // <div class="overlay"></div>
      .container
        .row
          .col-md-offset-1.col-md-10.col-sm-12.wow.fadeInUp(data-wow-delay='0.3s')
            h1.wow.fadeInUp(data-wow-delay='0.6s')='Your weekly ' + city + ' playlist'
            p.wow.fadeInUp(data-wow-delay='0.9s')='One song for each artist performing in ' + city + ' this week, delivered straight to your inbox. If you like a track, get out and check out a live show!'
            a.smoothScroll.btn.btn-success.btn-lg.wow.fadeInUp(href='#subscribe', data-wow-delay='1.2s') SUBSCRIBE
    // About section
    section#playlist
      .container
        .row
          .col-md-6.col-sm-12.wow.fadeInUp(data-wow-delay='0.2s')
            .about-thumb
              h1='Week of ' + playlist.start_date + ' - ' + playlist.end_date
              // p
                // | This is where a blurb about the artists coming to Nashville will go. It will be short and to the point and summarize the music on the playlist. It will also be included in the email to subscribers. Hopefully it will be well-written.
          .col-md-6.col-sm-12.wow.fadeInUp(data-wow-delay='0.2s')
            #spotify-playlist
              iframe(src='https://embed.spotify.com/?uri=' + playlist.uri, width='300', height='400', frameborder='0', allowtransparency='true')
    // Shows section
    section#shows
      .container
        .row
          .col-md-12.col-sm-12.wow.fadeInUp(data-wow-delay='0.3s')
            .section-title.text-center
              h1 Nashville This Week
              h3 Like a track? Go check out the artist live in Nashville this week.
        each artist in artists
          .item.col-md-3.col-sm-6.wow.fadeInUp(data-wow-delay='0.4s')
            .team-thumb
              .image-holder
                img.img-responsive.img-circle(src=artist.spotify_artist.images[0].url, alt=artist.spotify_artist.name)
              .description
                a(href=artist.event.url, target='_blank').btn.btn-success Tickets
              h2.heading=artist.spotify_artist.name
              p='@ ' + artist.event.venue.name
                br
                | Wed 5/24 7pm
    // Subscribe section
    section#subscribe
      .container
        .row
          .col-md-offset-1.col-md-10.col-sm-12
            .col-lg-offset-1.col-lg-10.section-title.wow.fadeInUp(data-wow-delay='0.4s')
              h1 Join the mailing list
              p
                | Get a playlist in your inbox every Sunday. Discover new local music every week. Get out and see some shows.
            
			
